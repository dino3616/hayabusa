{
  "name": "@hayabusa/website",
  "version": "0.1.0",
  "repository": "https://github.com/dino3616/hayabusa.git",
  "license": "MIT",
  "private": true,
  "type": "module",
  "module": "nodenext",
  "scripts": {
    "generate": "bun gql:generate && bun panda:generate",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "fmt": "biome format .",
    "fmt:fix": "biome format --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply",
    "test": "bun test",
    "panda:generate": "panda codegen && mkdir -p ./dist && panda cssgen --outfile ./dist/style.css",
    "panda:dev": "panda cssgen --outfile ./dist/style.css -w",
    "gql:generate": "graphql-codegen --config ./codegen.ts -r dotenv/config"
  },
  "dependencies": {
    "@hayabusa/core": "workspace:*",
    "@hayabusa/design-token": "workspace:*",
    "@hayabusa/ui": "workspace:*",
    "@hayabusa/urql": "workspace:*",
    "@supabase/ssr": "0.1.0",
    "@urql/next": "1.1.1",
    "framer-motion": "11.0.13",
    "graphql-tag": "2.12.6",
    "next": "14.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "schema-dts": "1.1.2",
    "sharp": "0.33.2",
    "ts-pattern": "5.0.8"
  },
  "devDependencies": {
    "@hayabusa/api-schema": "workspace:*",
    "@hayabusa/graphql-codegen": "workspace:*",
    "@hayabusa/pandacss": "workspace:*",
    "@hayabusa/postcss": "workspace:*",
    "@hayabusa/tsconfig": "workspace:*",
    "@hayabusa/type": "workspace:*",
    "@storybook/react": "8.0.0",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22"
  }
}
