{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hayabusa/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "#website/*": ["./src/*"],
      "~website/*": ["./*"],
      "#ui/*": ["../../packages/ui/*"]
    }
  },
  "include": ["./src/**/*", "./*.*js", "./*.*ts", ".next/types/**/*.*ts", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
